<% if activity.trackable %>
  <div class="activity-like">
    <div class="info">
      <%= render 'shared/avatar', user: activity.owner %>
      <h4 class="name"><% if activity.owner.sex == "female" %>
        Η 
      <% else %>
        Ο <%= activity.owner.name %>
      <% end %></h4>
      <span class="action">αρέσει μία <%= link_to 'δημοσίευση', activity.trackable %></span>
    </div>
    <div class="content">
      <h4><small><%= activity.trackable.content %></small></h4>
    </div>
    <%= render 'shared/created_at', activity: activity %>
  </div>
<% end %>